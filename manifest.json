{
  "manifest_version": 2,

  "name": "WebAdventure",
  "description": "This extension allows the user to play a game of WebAdventure, a version of the Wiki Game!",
  "version": "1.0",
  "background": {
    "scripts": [ "src/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://en.wikipedia.org/wiki/*"],
    "css": ["src/style.css"]
    }],
  "browser_action": {
    "default_icon": "assets/webIcon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "icons": {
    "16": "assets/webIcon16.png",
    "48": "assets/webIcon48.png",
    "128": "assets/webIcon128.png"
  }
}
